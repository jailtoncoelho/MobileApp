<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Foto do Perfil -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_account" />

    <!-- Nome do Usuário -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="33.5dp"
        android:layout_below="@id/profileImage"
        android:gravity="center"
        android:text="Nome do Usuário"
        android:textSize="18sp"/>

    <!-- Informações do Perfil -->
    <TextView
        android:id="@+id/profileInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameTextView"
        android:gravity="center"
        android:text="Informações do Perfil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="70dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"        
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- Texto do email do aluno -->
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:hint="Digite o email do aluno"
        android:id="@+id/editText1"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/dataNascimentoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- Texto da data de Nascimento do Aluno-->
    <EditText
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/profileImage"
        android:id="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:hint="Digite a data de nascimento"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/telefoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <!-- Texto de telefone do Aluno-->
    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/profileImage"
        android:id="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:hint="Digite o telefone"
        android:textSize="20sp"
        />


    <!-- Botão de Editar Perfil -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileInfoTextView"
        android:layout_gravity="center"
        android:text="Editar Perfil" />



</LinearLayout>
