<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@id/linearLayoutCadastroTurma">
    <TextView
        android:text="Cadastro de Turma:"
        android:textSize="90px"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:id="@+id/textView1" />
    <EditText
        android:id="@+id/edtNomeTurma"
        android:layout_below="@id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Turma"
        android:inputType="text" />
    <EditText
        android:id="@+id/edtNomeCurso"
        android:layout_below="@id/edtNomeTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Curso da Turma"
        android:inputType="text" />
    <EditText
        android:id="@+id/edtAnoIngressão"
        android:layout_below="@id/edtNomeCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ano de Ingresso da Turma"
        android:inputType="text" />
    <EditText
        android:id="@+id/edtCampusDaTurma"
        android:layout_below="@id/edtAnoIngressão"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Campus da Turma"
        android:inputType="text" />
    <EditText
        android:id="@+id/edtNumeroDeAlunos"
        android:layout_below="@id/edtCampusDaTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de Alunos"
        android:inputType="text" />
    <EditText
        android:id="@+id/edtAnoFormatura"
        android:layout_below="@id/edtNumeroDeAlunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Previsão de Formatura"
        android:inputType="text" />
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@id/edtAnoFormatura"
        android:layout_gravity="bottom">
        <Button
            android:text="Cancelar"
            android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
            android:id="@+id/btnCancelar"
            android:layout_marginRight="0.0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center" />
        <Button
            android:text="Enviar"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:id="@+id/btnEnviar"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>