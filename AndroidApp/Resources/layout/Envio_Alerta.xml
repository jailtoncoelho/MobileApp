    <!--Tabela para oraganizar o layout do formulario-->
    <TableLayout
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/disciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"        
                android:textSize="70px"
                android:text="Titulo da Disciplina"/>
        </TableRow>
        <TableRow
            android:paddingTop="5px"
            android:paddingBottom="5px"            
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/campo_disciplina"
                android:layout_width="match_parent"
                android:paddingTop="50px"
                android:layout_centerInParent="false"
                android:text="Disciplina"
                android:layout_marginTop="0.0dp"
                android:layout_marginBottom="0.0dp" />
        </TableRow>
        <TableRow
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/docente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="70px"
                android:text="Docente Responsavel"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/campo_docente"
            android:layout_below="@id/docente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:layout_centerInParent="false"
            android:text="Docente"/>
        </TableRow>
    </TableLayout>



</RelativeLayout>