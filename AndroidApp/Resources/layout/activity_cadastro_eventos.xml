<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/linearLayout1">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:id="@+id/txtLabel"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="25.0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/evento_nome"
        android:layout_marginTop="20dp"
        android:id="@+id/txtNomeEvento" />
    <EditText
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:id="@+id/edtNomeEvento" />
    <TextView
        android:layout_marginLeft="25.0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/evento_descricao"
        android:id="@+id/txtDescricaoEvento" />
    <EditText
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/edtDescricaoEvento" />

    <TextView
        android:layout_marginLeft="25.0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/evento_observacao"
        />

    <EditText
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/etdObservacaoEvento"/>


    <TextView
        android:text="@string/evento_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDatalEvento" />




    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/datePickerDataEvento" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/linearLayout2"
        android:layout_gravity="bottom">
        <Button
            android:text="Cancelar"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:id="@+id/btnCancelar"
            android:layout_marginRight="0.0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center" />
        <Button
            android:text="Enviar"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:id="@+id/btnEnviar"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center" />


    </LinearLayout>
</LinearLayout>