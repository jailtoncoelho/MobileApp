<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabel"
        android:textStyle="bold" />
    <TextView
        android:text="@string/nomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeEvento" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNomeEvento" />
    <TextView
        android:text="@string/descricaoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescricaoEvento" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDescricaoEvento" />
    <TextView
        android:text="@string/responsavelEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResponsavelEvento" />
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtResponsavelEvento" />
    <TextView
        android:text="@string/grupoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtGrupoEvento" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdGrupos">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="TADS"
            android:id="@+id/radioTads" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENGEL"
            android:id="@+id/radioEngel" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTOMAÇÂO"
            android:id="@+id/radioAutomacao" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_gravity="bottom">
        <Button
            android:text="Cancelar"
            android:layout_width="289.9dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnCancelar"
            android:layout_marginRight="0.0dp"
            android:layout_gravity="left|end" />
        <Button
            android:text="Enviar"
            android:layout_width="289.5dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnEnviar"
            android:layout_gravity="right|end" />


    </LinearLayout>
</LinearLayout>